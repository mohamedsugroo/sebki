





<div class="sign_in">
	
	<div class="row">

		<div class="col register" style="background-image: url('https://images.pexels.com/photos/34729/pexels-photo.jpg?cs=srgb&dl=bus-cars-crosswalk-34729.jpg&fm=jpg')">
			<div class="container">
				
			</div>
		</div>

		<div class="col login">
			<div class="container">

				<div class="form_box">
					
					<div class="brand">
						<a href="<%= root_path %>">Sebki</a>
					</div>

					<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
						<div class="form-inputs">
							<%#= f.input :email, required: false, autofocus: true %>
							<%#= f.input :password, required: false %>
							
								
							</div>

						<div class="form-group">
							<%= f.input :email, required: false, autofocus: true, class: 'form-control', id: :InputEmail1 %>

							<small id="emailHelp" class="form-text text-muted">
								We'll never share your email with anyone else.
							</small>

						</div>

						<div class="form-group">
							<!-- <label for="exampleInputPassword1">Password</label> -->
							<%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
						    <%= f.input :password_confirmation, required: true %>

						</div>
						
						<div class="form-group form-check">
							<!-- <input type="checkbox" class="form-check-input" id="exampleCheck1"> -->
							<%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>

							<%= f.label :remember_me, required: false, class: 'form-check-label' %>

						    <!-- <label class="form-check-label" for="exampleCheck1">Check me out</label> -->
						</div>

						<div class="row">
							<div class="col">
								<%= render "devise/shared/links" %>
							</div>
							<div class="col txt-right">
							    <%= f.submit "Sign up", class: "btn btn-purple btn-lg" %>

							</div>
						</div>

					<% end %>

				</div>

			</div>
		</div>

	</div>
</div>


<style>
	.custom_navbar {
		display: none
	}

	.footer  {
		display: none
	}
</style>




