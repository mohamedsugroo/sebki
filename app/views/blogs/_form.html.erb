<%= simple_form_for(@blog) do |f| %>
  <%= f.error_notification %>

<div class="row">
  <div class="col">
    
    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :body %>
    </div>

  </div>

  <div class="col-md-4">

    <div class="form-inputs">
      <%= f.input :featured %>
      <%= f.input :publish %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>

  </div>

</div>
  
<% end %>
